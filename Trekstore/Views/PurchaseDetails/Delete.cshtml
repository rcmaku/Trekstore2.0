@model Trekstore.Models.PurchaseDetails

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminar</h1>

<h3>Seguro que desea eliminar esto?</h3>
<div>
    <h4>Detalle de Compra</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PurchDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PurchDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.ProductDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Provider)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Provider.ProviderID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TipoDePago)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoDePago.tipoPagoID)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="purch_id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Regresar</a>
    </form>
</div>
