@model Trekstore.Models.Categories

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<video autoplay muted loop class="background-video">
    <source src="~/videos/video3.mp4" type="video/mp4">
    Your browser does not support the video tag.
</video>
<h1>Editar</h1>

<h4>Categoria</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoryID" />
            <div class="form-group">
                <label asp-for="CategoriaNombre" class="control-label">Categoria</label>
                <input asp-for="CategoriaNombre" class="form-control" />
                <span asp-validation-for="CategoriaNombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoriaDescripcion" class="control-label">Descripcion</label>
                <input asp-for="CategoriaDescripcion" class="form-control" />
                <span asp-validation-for="CategoriaDescripcion" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index" class="custom-link">Regresar</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
